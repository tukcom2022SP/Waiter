<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="회원 가입"
        android:textColor="#b22222"
        android:gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:fontFamily="@font/godom"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">



        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="회원 유형"
                    android:textSize="20sp"
                    android:textColor="#b22222"
                    android:textStyle="bold"
                    android:fontFamily="@font/godom"
                    />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/selection_type"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/godom"
                    >

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="고객"
                        android:fontFamily="@font/godom"
                        android:textColor="#b22222"
                        />

                    <RadioButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="사업자"
                        android:fontFamily="@font/godom"
                        android:textColor="#b22222"
                        />

                </RadioGroup>

                <TextView
                    android:id="@+id/signmailtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="이메일"
                    android:textColor="#b22222"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/godom"
                    />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/signmail"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:ems="10"
                    android:hint=" 이메일(@포함)"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:fontFamily="@font/godom"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signmailcheckbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:text="확인"
                    android:textColor="#b22222"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/godom"
                    />

            </LinearLayout>

                <TextView
                    android:id="@+id/signPWtext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="비밀번호"
                    android:textColor="#b22222"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/godom"
                    />


                <EditText
                    android:id="@+id/signPW"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:ems="10"
                    android:hint=" 비밀번호"
                    android:inputType="textPassword"
                    android:text=""
                    android:fontFamily="@font/godom"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/signPWchecktext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:text="비밀번호 확인"
                        android:textColor="#b22222"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/godom"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <EditText
                        android:id="@+id/signPWcheck"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:ems="10"
                        android:hint=" 비밀번호 다시 입력"
                        android:inputType="textEmailAddress"
                        android:text=""
                        android:fontFamily="@font/godom"
                        />


                </LinearLayout>

                </LinearLayout>


                <TextView
                    android:id="@+id/signNametext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="이름"
                    android:textColor="#b22222"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/godom"
                    />

                <EditText
                    android:id="@+id/signName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:ems="10"
                    android:hint=" 이름"
                    android:inputType="textPersonName"
                    android:text=""
                    android:fontFamily="@font/godom"
                    />

                <TextView
                    android:id="@+id/signnumbertext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:text="전화번호"
                    android:textColor="#b22222"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/godom"
                    />

                <EditText
                    android:id="@+id/signnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:ems="10"
                    android:hint=" 전화번호"
                    android:inputType="text|phone"
                    android:text=""
                    android:fontFamily="@font/godom"
                    />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/signinbutton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="회원가입"
                    android:textColor="#b22222"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/godom"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>